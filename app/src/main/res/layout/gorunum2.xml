<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#F4F1F1"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imagefavorits"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ad"
        android:id="@+id/adfavorits"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/imagefavorits"
        app:layout_constraintStart_toStartOf="@+id/imagefavorits"
        app:layout_constraintTop_toBottomOf="@+id/imagefavorits" />

    <TextView
        android:id="@+id/modelfavorits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="model"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imagefavorits"
        app:layout_constraintStart_toStartOf="@+id/imagefavorits"
        app:layout_constraintTop_toBottomOf="@+id/adfavorits" />

    <TextView
        android:id="@+id/qiymetfavorits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ad"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imagefavorits"
        app:layout_constraintStart_toStartOf="@+id/imagefavorits"
        app:layout_constraintTop_toBottomOf="@+id/modelfavorits" />



</androidx.constraintlayout.widget.ConstraintLayout>