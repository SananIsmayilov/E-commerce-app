<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="#FBFBFB"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="5dp"
        android:id="@+id/cardView1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/constraint1"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="170dp"
                android:id="@+id/imageviewcard"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toTopOf="@+id/constraint1"
                android:src="@drawable/saat"
                android:background="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="210dp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/textViewnamecard"
                android:layout_height="wrap_content"
                android:text="AD"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageviewcard"
                app:layout_constraintStart_toStartOf="@+id/imageviewcard"
                app:layout_constraintTop_toBottomOf="@id/imageviewcard" />

            <TextView
                android:id="@+id/textViewsalecard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:text="QiymÉ™t"
                android:textColor="#1CCC25"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewmodelcard"
                app:layout_constraintStart_toStartOf="@+id/textViewmodelcard"
                app:layout_constraintTop_toBottomOf="@+id/textViewmodelcard" />

            <TextView
                android:id="@+id/textViewmodelcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:text="Model"
                android:textColor="#1CCC25"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textViewnamecard"
                app:layout_constraintStart_toStartOf="@+id/textViewnamecard"
                app:layout_constraintTop_toBottomOf="@+id/textViewnamecard" />

            <Button
                android:id="@+id/button"
                android:layout_width="45dp"
                android:layout_height="60dp"
                android:layout_marginEnd="13dp"
                android:backgroundTint="@color/white"
                android:clickable="false"
                app:layout_constraintEnd_toEndOf="@+id/imageviewcard"
                app:layout_constraintTop_toTopOf="@+id/imageviewcard" />

            <Button
                android:layout_width="30dp"
                android:id="@+id/heart"
                android:layout_height="30dp"
                android:background="@drawable/cart"
                app:layout_constraintBottom_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="@+id/button"
                app:layout_constraintStart_toStartOf="@+id/button"
                app:layout_constraintTop_toTopOf="@+id/button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>